<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:background="#f0f0f0">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">
    </RelativeLayout>

    <TextView
        android:id="@+id/txtGpsX"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="#f0f0f0"
        android:textColor="#eab564"
        android:fontFamily="@font/tmoneyroundwindextrabold"
        app:layout_constraintTop_toBottomOf="@+id/map_view"
        app:layout_constraintStart_toStartOf="@+id/map_view"/>

    <TextView
        android:id="@+id/txtGpsY"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:background="#f0f0f0"
        android:textColor="#eab564"
        android:fontFamily="@font/tmoneyroundwindextrabold"
        app:layout_constraintTop_toBottomOf="@+id/txtGpsX"
        app:layout_constraintStart_toStartOf="@+id/txtGpsX"/>

    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/maplestory"
        android:text="SMS 전송"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/txtGpsX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtGpsX"
        app:layout_constraintBottom_toBottomOf="@+id/txtGpsX"/>

    <Button
        android:id="@+id/btnSendKakao"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button2"
        android:fontFamily="@font/maplestory"
        android:text="카카오 전송"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/txtGpsY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtGpsY"
        app:layout_constraintBottom_toBottomOf="@+id/txtGpsY"/>

